{% extends 'base.html.twig' %}

{% block title %}Spectacle{% endblock %}

{% block body %}
    <div class="container">
        <h1>Spectacle</h1>

        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Date</th>
                <td>{{ show.date ? show.date|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ show.name | capitalize }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ show.description | capitalize }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ show.picture | capitalize }}" alt=""></td>
            </tr>
            </tbody>
        </table>

        <button class="btn"><a href="{{ path('show_index') }}">Retour</a></button>

        <button class="btn btn-success"><a href="{{ path('show_edit', {'id': show.id}) }}">Editer</a></button>

        {{ include('show/_delete_form.html.twig') }}
    </div>
{% endblock %}
